.temperatureCardsList{
    margin-top: 40px;
    width: 90vw;
    display: flex;
    align-items: center;
    overflow: scroll;
    border: 1px solid rebeccapurple;
}
.temperatureCardsList .temperatureCard{
    border: 1px solid rebeccapurple;
    margin: 10px 2vw;
    flex-shrink: 0;
    width:26vw;
    display: flex;
    flex-direction: column;
    align-items: center;
}
.temperatureCardsList .temperatureCard>.title{
    font-size: 18px;
    color: #555;
}
.temperatureCardsList .temperatureCard .temp >.tempNum{
    font-size: 26px;
    color: #555;
}
.temperatureCardsList .temperatureCard>.windInfo >.windDir,.windScale{
    font-size: 14px;
    color: #989898;
}