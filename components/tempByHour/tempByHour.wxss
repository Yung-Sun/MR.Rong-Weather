.temperatureCardsList{
    width: 90vw;
    display: flex;
    align-items: center;
    overflow: scroll;
    /* border: 1px solid rebeccapurple; */
}
.temperatureCardsList .temperatureCard{
    /* border: 1px solid rebeccapurple; */
    margin: 10px 2vw;
    flex-shrink: 0;
    width:16vw;
    display: flex;
    flex-direction: column;
    align-items: center;
}
.temperatureCardsList .temperatureCard .title{
    font-size: 18px;
    color: #555;
}
.temperatureCardsList .temperatureCard .temp .tempNum{
    font-size: 26px;
    color: #555;
}
.temperatureCardsList .temperatureCard .windInfo .windDir,.windScale,.weatherText{
    font-size: 14px;
    color: #989898;
}

.weatherInfo{
    display: flex;
    justify-content: center;
    align-items: center;
}
.weatherInfo .weatherIcon{
    height: 20px;
    width: 20px;
    margin: 0 3px;
}